{
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",
        "lib": ["ES2020", "ES2016", "ES2015", "dom"],
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "importHelpers": true,

        "types": ["node", "globals"],
        "typeRoots": ["./node_modules/@types", "./src"],

        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["*.js"]
}
